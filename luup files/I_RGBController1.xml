<?xml version="1.0"?>
<implementation>
	<files>L_RGBController1.lua</files>
	<startup>startup</startup>
	<actionList>
		<!-- Parameters -->
		<action>
			<serviceId>urn:upnp-org:serviceId:RGBController1</serviceId>
			<name>GetRGBDeviceTypes</name>
			<run>
				getRGBDeviceTypes(lul_device)
			</run>
		</action>
		<!-- Status -->
		<action>
			<!-- DEPRECATED -->
			<serviceId>urn:upnp-org:serviceId:RGBController1</serviceId>
			<name>SetTarget</name>
			<job>
				setTarget(lul_device, lul_settings.newTargetValue)
				return 4, nil
			</job>
		</action>
		<action>
			<!-- DEPRECATED -->
			<serviceId>urn:upnp-org:serviceId:RGBController1</serviceId>
			<name>GetTarget</name>
			<run>
				luup.variable_get("urn:upnp-org:serviceId:SwitchPower1", "Status", lul_device)
			</run>
		</action>
		<action>
			<!-- DEPRECATED -->
			<serviceId>urn:upnp-org:serviceId:RGBController1</serviceId>
			<name>GetStatus</name>
			<run>
				luup.variable_get("urn:upnp-org:serviceId:SwitchPower1", "Status", lul_device)
			</run>
		</action>
		<action>
			<serviceId>urn:upnp-org:serviceId:SwitchPower1</serviceId>
			<name>SetTarget</name>
			<job>
				setTarget(lul_device, lul_settings.newTargetValue)
				return 4, nil
			</job>
		</action>
		<action>
			<serviceId>urn:upnp-org:serviceId:SwitchPower1</serviceId>
			<name>GetTarget</name>
			<run>
				luup.variable_get("urn:upnp-org:serviceId:SwitchPower1", "Status", lul_device)
			</run>
		</action>
		<action>
			<serviceId>urn:upnp-org:serviceId:SwitchPower1</serviceId>
			<name>GetStatus</name>
			<run>
				luup.variable_get("urn:upnp-org:serviceId:SwitchPower1", "Status", lul_device)
			</run>
		</action>
		<!-- Color -->
		<action>
			<!-- DEPRECATED -->
			<serviceId>urn:upnp-org:serviceId:RGBController1</serviceId>
			<name>SetColor</name>
			<job>
				setColorTarget(lul_device, lul_settings.newColor)
				return 4, nil
			</job>
		</action>
		<action>
			<serviceId>urn:upnp-org:serviceId:RGBController1</serviceId>
			<name>SetColorTarget</name>
			<job>
				setColorTarget(lul_device, lul_settings.newColorTargetValue, lul_settings.transitionDuration, lul_settings.transitionNbSteps)
				return 4, nil
			</job>
		</action>
		<action>
			<serviceId>urn:upnp-org:serviceId:RGBController1</serviceId>
			<name>GetColor</name>
			<run>
				getColor(lul_device)
			</run>
		</action>
		<action>
			<serviceId>urn:upnp-org:serviceId:RGBController1</serviceId>
			<name>GetColorChannelNames</name>
			<run>
				getColorChannelNames(lul_device)
			</run>
		</action>
		<!-- Animation -->
		<action>
			<serviceId>urn:upnp-org:serviceId:RGBController1</serviceId>
			<name>StartAnimationProgram</name>
			<job>
				startAnimationProgram(lul_device, lul_settings.programId, lul_settings.programName, lul_settings.programDuration, lul_settings.programSpeed)
				return 4, nil
			</job>
		</action>
		<action>
			<serviceId>urn:upnp-org:serviceId:RGBController1</serviceId>
			<name>StopAnimationProgram</name>
			<job>
				startAnimationProgram(lul_device, 0, nil)
				return 4, nil
			</job>
		</action>
		<action>
			<serviceId>urn:upnp-org:serviceId:RGBController1</serviceId>
			<name>GetAnimationPrograms</name>
			<run>
				getAnimationPrograms(lul_device)
			</run>
		</action>
	</actionList>
</implementation>
